<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@android:color/darker_gray"
        android:elegantTextHeight="false"
        android:freezesText="false"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Get Started!"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="32dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ditto_welcome_label2"
        app:layout_constraintStart_toStartOf="@+id/ditto_welcome_label2"
        app:layout_constraintTop_toBottomOf="@+id/ditto_welcome_label2"
        app:rippleColor="@android:color/darker_gray"
        app:strokeColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:backgroundTint="@android:color/darker_gray"
        android:elegantTextHeight="false"
        android:freezesText="false"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Log in"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="23dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_button"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="@+id/sign_up_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button"
        app:layout_constraintVertical_bias="0.089"
        app:rippleColor="@android:color/darker_gray"
        app:strokeColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/ditto_welcome_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome to"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F2F3E8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ditto_welcome_label2"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="#23686767"
        android:backgroundTint="#08686767"
        android:backgroundTintMode="src_over"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Keep track of your habits"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F2F3E8"
        android:textSize="24sp"
        app:drawableTint="#176C6464"
        app:drawableTintMode="src_over"
        app:layout_constraintEnd_toEndOf="@+id/ditto_title_lable"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/ditto_title_lable"
        app:layout_constraintTop_toBottomOf="@+id/ditto_title_lable" />

    <TextView
        android:id="@+id/ditto_title_lable"
        android:layout_width="176dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:fontFamily="serif"
        android:text="Ditto"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F2F3E8"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/ditto_welcome_label"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/ditto_welcome_label"
        app:layout_constraintTop_toBottomOf="@+id/ditto_welcome_label" />

</androidx.constraintlayout.widget.ConstraintLayout>